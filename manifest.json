{
    "manifest_version": 3,
    "name": "Bookmarks-plus",
    "version": "1.0",
    "description": "A Chrome extension to manage bookmarks with categorization, tagging, and notes.",
    "permissions": ["storage", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "assets/icons/icon.png"
        }
    },
    "commands": {
        "open-popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Open bookmark form popup"
        }
    },
    "host_permissions": ["http://*/*", "https://*/*"]
}
