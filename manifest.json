{
    "manifest_version": 3,
    "name": "Bookmarks-plus",
    "version": "1.0",
    "description": "A Chrome extension to manage bookmarks with categorization, tagging, and notes.",
    "permissions": ["storage", "activeTab", "tabs", "downloads"],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "assets/icons/icon.png"
        },
        "default_title": "Bookmarks-plus"
    },
    "commands": {
        "add-bookmark": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Open bookmark form popup"
        }
    },
    "host_permissions": ["http://*/*", "https://*/*"],
    "web_accessible_resources": [
        {
            "resources": [".storage/saved_bookmarks.json"],
            "matches": ["<all_urls>"]
        }
    ]
}
